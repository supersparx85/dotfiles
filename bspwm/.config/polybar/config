[colors]
;background = ${xrdb:color0:#222}
background = #232323
background-alt = #C0C0C0
;foreground = ${xrdb:color7:#222}
foreground = #fff
foreground-alt = #000
primary = #ffb52a
secondary = #1C1C1C
alert = #bd2c40

[bar/bar]
width = 100%
height = 15
fixed-center = false
background = ${colors.background}
foreground = ${colors.foreground}
line-size = 3
line-color = #f00
border-size = 0
border-color = #00000000
padding-left = 0
padding-right = 0
module-margin-left = 1
module-margin-right = 1
font-0 = monospace:size=10
font-1 = JoyPixels:scale=12
font-2 = Font Awesome 5 Free:pixelsize=10;1
font-3 = Font Awesome 5 Free Solid:pixelsize=10;1
font-4 = Font Awesome 5 Brands:pixelsize=10;1
modules-left = bspwm
modules-center =
modules-right = memory alsa date
tray-position = right
tray-padding = 2
cursor-click = pointer
cursor-scroll = ns-resize
bottom = false

[module/bspwm]
type = internal/bspwm
label-focused = %index%
label-focused-background = ${colors.background-alt}
label-focused-padding = 2
label-occupied = %index%
label-occupied-padding = 2
label-urgent = %index%!
label-urgent-background = ${colors.alert}
label-urgent-padding = 2
label-empty =
label-empty-foreground = ${colors.foreground-alt}
label-empty-padding = 2

[module/memory]
type=custom/script
exec=echo "🧠 $(free -h | awk '/Mem/ {print $3 "/" $2}')"
interval=1m

[module/temperature]
type=custom/script
exec=echo " $(curl -s http://wttr.in/?format=%t)"
interval=30m

[module/date]
type = internal/date
interval = 1.0
date = 🕓 %I:%M%p
date-alt =  📆 %b %d (%a) 🕓 %I:%M%p

[settings]
screenchange-reload = true

[global/wm]
margin-top = 5
margin-bottom = 5

[module/alsa]
type = internal/alsa
format-volume = 🔊 <label-volume>
label-volume = %percentage%
label-volume-foreground = ${root.foreground}
format-muted-prefix = 🔇 
format-muted-foreground = ${root.foreground}
label-muted = %percentage%%

