#!/bin/sh
Symbols="
–  | -
dʒ | dj
tʃ | ch
ə  | uh
ä  | ah
æ  | aah
ə̃  | uh~
ɾ̃  | n
ȯi | oi
ē | ee
ŋ  | ng
ō  | oh
au̇ | au
ȯ  | o
ʌ | 'uh
e  | eh
i  | ih
ā  | ei
ī  | ai
ɱ  | mf
ɸ  | f]
ɹ  | rr
ɾ  | dd
ʃ  | sh
ʒ  | zh
ʔ  | glottal ?
ʰ  | h_
β  | v]
ð  | dth
θ  | th
—  | --
→  | ->
n̩ | n
ɝ | 'ur
ɚ | ur
ɛ̃ | ehn
ü | uu
u̇ | uh
"
echo "$Symbols" | rofi -dmenu -i -l 10 | awk '{print $1}' | tr -d '\n' | xclip -selection clipboard
notify-send "$(xclip -o -selection clipboard) copied to clipboard"
