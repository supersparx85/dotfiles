#!/bin/sh
options="$(printf 'ğŸ”’ Lockdown\nğŸšª Logout\nğŸ’» Reboot\nğŸ”Œ Poweroff\nğŸ›‘ Exit' | rofi -dmenu)"
[ "$options" = "ğŸ”’ Lockdown" ] && amixer set Master mute && slock
