ln -s ~/Documents/dotfiles/files/vifmrc ~/.config/vifm/vifmrc
ln -s ~/Documents/dotfiles/files/Default.vifm ~/.config/vifm/colors/Default.vifm

ln -s ~/Documents/dotfiles/exts ~
ln -s ~/Documents/dotfiles/files/.Xresources ~
ln -s ~/Documents/dotfiles/files/.xinitrc ~
ln -s ~/Documents/dotfiles/files/.profile ~
ln -s ~/Documents/dotfiles/files/.profile ~/.bash_profile
ln -s ~/Documents/dotfiles/files/.bashrc ~
