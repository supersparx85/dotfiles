#!/bin/sh
url="$(xclip -o)"
cd ~/Downloads/ || exit
case "$(printf "ğŸµ Download audio\nğŸ“¼ Download video\nğŸ–¼ Download thumbnail\nğŸ“¹ Open it with mpv" | dmenu -b -i -l 10)" in
		"ğŸµ Download audio") notify-send "â¬‡ Downloading audio" && youtube-dl -x -f bestaudio --audio-format vorbis -o '$HOME/Downloads/Music/%(title)s.%(ext)s' "$url" && dunstify "ğŸ“¼ Video has been Downloaded!" -r 250 &;;
		"ğŸ“¼ Download video") notify-send "â¬‡ Downloading video" &&  youtube-dl -f best -o '$HOME/Downloads/Videos/%(title)s.%(ext)s' "$url" && dunstify "ğŸµ Song has been Downloaded!" -r 250 &;;
		"ğŸ–¼ Download thumbnail") notify-send "â¬‡ Downloading thumbnail" && youtube-dl --write-thumbnail --skip-download -o '$HOME/Downloads/Pictures/%(title)s.%(ext)s'} "$url" && dunstify "ğŸ–¼ Thumbnail has been Downloaded!" -r 250 &;;
		"ğŸ“¹ Open it with mpv") notify-send "ğŸ“¹ Open it with mpv" && mpv "$url" &;;
esac
