#!/bin/sh
url="$(xclip -o)"
cd ~/Downloads/ || exit

options="$(printf "ðŸŽµ Download audio\nðŸ“¼ Download video\nðŸ–¼ Download thumbnail\nðŸ“¹ Open it with mpv" | rofi -dmenu)"

[ "$options" = "ðŸŽµ Download audio" ] && notify-send "â¬‡ Downloading audio" && youtube-dl -x -f bestaudio --audio-format vorbis -o '$HOME/Downloads/Music/%(title)s.%(ext)s' "$url" && notify-send "ðŸ“¼ Video has been Downloaded!"

[ "$options" =  "ðŸ“¼ Download video" ] &&  notify-send "â¬‡ Downloading video" &&  youtube-dl -f best -o '$HOME/Downloads/Videos/%(title)s.%(ext)s' "$url" && notify-send "ðŸŽµ Song has been Downloaded!"

[ "$options" = "ðŸ–¼ Download thumbni ] &&  notify-send "â¬‡ Downloading thumbnail" && youtube-dl --write-thumbnail --skip-download -o '$HOME/Downloads/Pictures/%(title)s.%(ext)s'} "$url" && notify-send "ðŸ–¼ Thumbnail has been Downloaded!"

[ "$options" = "ðŸ“¹ Open it with mpv" ] && notify-send "ðŸ“¹ Open it with mpv" && mpv "$url" &
